{
  "name": "Ascella the image uploader",
  "short_name": "Ascella",
  "theme_color": "#ffffff",
  "start_url": "/",
  "id": "host.ascella",
  "display": "standalone",
  "scope": "/",
  "categories": [
    "media",
    "images",
    "upload"
  ],
  "description": "Ascella is a simple image uploader, with native and web support.",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "pwa-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "name": "Upload image",
      "accept": {
        "image/png": [
          ".png"
        ],
        "image/jpeg": [
          ".jpg",
          ".jpeg"
        ],
        "image/gif": [
          ".gif"
        ],
        "image/webp": [
          ".webp"
        ]
      }
    }
  ],
  "share_target": {
    "action": "/upload?share-target=1",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": [
            "image/png",
            "image/jpeg",
            "image/gif",
            "image/webp",
            ".jpeg",
            ".jpg",
            ".png",
            ".webp",
            ".gif",
            ".JPEG"
          ]
        }
      ]
    }
  }
}