---
const footerItems = [
  {
    name: "Discord",
    url: "https://discord.gg/BDxd9AuHpr",
    last: false,
  },
  {
    name: "Github",
    url: "https://github.com/ascellahost/ascellav3",
    last: false,
  },
  {
    name: "Privacy",
    url: "/privacy",
    last: false,
  },
  {
    name: "Rules",
    url: "/rules",
    last: false,
  },
  {
    name: "DMCA",
    url: "/dmca",
    last: true,
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Ascella.host</title>
  </head>
  <body>
    <head>
      <div>
        <p class="text-5xl font-bold text-center m-10">
          <a class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-white" href="/">Ascella.host</a>
        </p>
      </div>
    </head>
    <slot />
    <footer class="mt-2 max-w-[70rem] mx-auto">
      <ul class="flex flex-wrap mb-10 justify-center">
        {
          footerItems.map((element: { url: string; name: string }) => (
            <li class="mx-3">
              <a class="link link-hover link-primary" href={element.url}>
                {element.name}
              </a>
            </li>
            <span>{element.last === true ? '' : '/'}</span>
          ))
        }
      </ul>
    </footer>
  </body>
</html>
